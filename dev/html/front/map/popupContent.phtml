<ips:template parameters="$marker, $photo" />
<div class="ipsPhotoPanel ipsPhotoPanel_tiny ipsClearfix">
	<a class='ipsUserPhoto ipsUserPhoto_mini' href='{url="app=core&module=members&controller=profile&id={$marker['member_id']}" seoTemplate="profile" seoTitle="$marker['members_seo_name']"}' target='_blank' rel="nooptimize">
		<img src='{$photo}' itemprop='image' alt=''>
	</a>
	<div>
		<p class='ipsType_large'>
			<a href='{url="app=core&module=members&controller=profile&id={$marker['member_id']}" seoTemplate="profile" seoTitle="$marker['members_seo_name']"}' target='_blank' rel="nooptimize">{$marker['marker_name']}</a>
		</p>
		<span class='localTime ipsHide ipsType_light ipsType_small' data-timezone="{$marker['timezone']}"></span>
	</div>
</div>
{{if $marker['marker_location']}}
	<p>{$marker['marker_location']}</p>
{{endif}}

{{if $marker['marker_comments'] > 0 OR $marker['marker_reviews'] > 0}}
	<p class='ipsType_light ipsType_small'><i class='fa fa-comment'></i> {lang="marker_comment_count" pluralize="$marker['marker_comments']"} &middot; {lang="marker_review_count" pluralize="$marker['marker_reviews']"}</p>
{{endif}}